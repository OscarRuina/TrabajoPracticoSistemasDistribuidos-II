<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('partials/head') %>
    </head>
    <body>
        <!-- NAVBAR -->
        <%- include ('partials/navigation') %>
        <div class="container">
            <div class="card bg-dark text-white">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="card-title"><%= data[0].titulo %></h2>
                    <button class="btn btn-danger btn-sm" id="btn-delete" data-id="{{image.uniqueId}}">
                    <i class="fa fa-times"></i> Delete
                    </button>
                </div>
                <div class="card-body">
                    <p><%= data[0].descripcion %></p>
                    <div class="text-center">
                    <img src="/img/<%= data[0].nombre %>" class="img-fluid">
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
                    <i class="fas fa-thumbs-up"></i> Like
                    </button>
                    <p>
                    <span class="likes-count"><%= data[0].likes %></span>
                    <i class="fas fa-heart"></i>
                    </p>
                    <p>
                    <i class="fas fa-eye"></i> <%= data[0].vistas %>
                    </p>
                    <p>
                    <i class="far fa-clock"></i>
                    <%= data[0].fechahora %>
                    </p>
                </div>
            </div>

            <!-- COMMENTS -->
            <div class="card mt-2 bg-dark text-white">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Comments</h3>
                    <button class="btn btn-info" id="btn-toggle-comment">
                        <i class="fa fa-comments-o"></i> Post a Comment
                    </button>
                </div>
                <div class="card-body">
                    <blockquote id="post-comment">
                        <form action="/images/<%= data[0].id %>/comment" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control bg-dark text-light border border-success" name="name"
                            placeholder="Name">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control bg-dark text-light border border-success" name="email"
                            placeholder="Email">
                        </div>
                        <div class="form-group">
                            <textarea name="comment" class="form-control bg-dark text-light border border-success" rows="2"
                            placeholder="Your Comment"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-outline-success" id="btn-comment">
                            <i class="fa fa-comment"></i> Post
                            </button>
                        </div>
                        </form>
                    </blockquote>

                    <ul class="list-group p-4">
                            <li class="list-group-item">
                                <div class="row">
                                    <blockquote class="col">
                                    <% if (comentario) { %>
                                        <% for (var i = 0; i < comentario.length; i++ ) { %>
                                        <p class="lead"><%= comentario[i].comentario %></p>
                                            <footer class="blockquote-footer">
                                                <%= comentario[i].nombre %> - <%=comentario[i].fechahora%>
                                            </footer>
                                        </blockquote>
                                        <% } %>
                                    <% } %>
                                </div>
                            </li>
                    </ul>
                </div>
            </div>
  



        </div>
        <%- include ('partials/footer') %>
    </body>
</html>